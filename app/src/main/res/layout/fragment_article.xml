<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
                name="viewModel"
                type="top.easelink.lcg.ui.main.article.viewmodel.ArticleViewModel"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/clRootView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:elevation="@dimen/dp_5">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/article_toolbar"
                    android:textSize="@dimen/sp_12"
                    style="@style/Toolbar"
                    app:title="@{viewModel.articleTitle}"
                    app:subtitleTextColor="@color/white"
                    app:titleTextAppearance="@style/Toolbar.TitleText"
                    app:titleTextColor="@color/white" />
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/post_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adapter="@{viewModel.posts}"/>

        </com.google.android.material.appbar.AppBarLayout>
        <TextView
                style="@style/TextStyle.Title.Sub"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/block_info"
                android:drawableTop="@drawable/ic_block_screen"
                android:drawablePadding="@dimen/dp_10"
                android:visibility="@{viewModel.isBlocked ? View.VISIBLE : View.GONE, default = gone}"/>
        <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/fetching_progress_bar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE, default = gone}" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>