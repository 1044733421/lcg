<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_marginTop="@dimen/dp_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_bg_white_4dp"
    android:padding="@dimen/dp_2"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/lanzous_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/chenxin"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:textColor="@color/red_dark2" />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_below="@id/lanzous_title"
        android:layout_marginTop="@dimen/dp_2"
        android:hint="@string/input_key_word"
        android:textSize="@dimen/sp_12"
        android:padding="@dimen/dp_8"
        android:id="@+id/search_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textWebEditText"
        android:background="@drawable/oval_bg"
        android:singleLine="true"
        android:imeOptions="actionSearch" />

</RelativeLayout>